      <script>
        document.querySelectorAll(".faq-accordion").forEach((accordion) => {
          accordion
            .querySelectorAll(".faq-accordion-trigger")
            .forEach((trigger) => {
              trigger.addEventListener("click", (event) => {
                const current = event.currentTarget as HTMLElement;
                const expanded =
                  current.getAttribute("aria-expanded") === "true";
                accordion
                  .querySelectorAll(".faq-accordion-trigger")
                  .forEach((t) => t.setAttribute("aria-expanded", "false"));
                accordion
                  .querySelectorAll(".faq-accordion-content")
                  .forEach((c) => ((c as HTMLElement).hidden = true));
                if (!expanded) {
                  current.setAttribute("aria-expanded", "true");
                  const controls = current.getAttribute("aria-controls");
                  if (controls) {
                    const content = document.getElementById(controls);
                    if (content) content.hidden = false;
                  }
                }
              });
            });
        });
      </script>
      <script>
        const tabList = document.querySelectorAll(".faq-tab");
        const tabPanels = document.querySelectorAll(".faq-tab-panel");

        tabList.forEach((tab, idx) => {
          tab.addEventListener("click", () => {
            tabList.forEach((t, i) => {
              t.classList.toggle("active", i === idx);
              t.setAttribute("aria-selected", i === idx ? "true" : "false");
              t.setAttribute("tabindex", i === idx ? "0" : "-1");
            });
            tabPanels.forEach((panel, i) => {
              (panel as HTMLElement).style.display = i === idx ? "" : "none";
            });
          });
          tab.addEventListener("keydown", (e) => {
            const event = e as KeyboardEvent;
            if (event.key === "ArrowRight" || event.key === "ArrowLeft") {
              event.preventDefault();
              let nextIdx = idx + (event.key === "ArrowRight" ? 1 : -1);
              if (nextIdx < 0) nextIdx = tabList.length - 1;
              if (nextIdx >= tabList.length) nextIdx = 0;
              (tabList[nextIdx] as HTMLElement).focus();
            }
          });
        });
      </script>
